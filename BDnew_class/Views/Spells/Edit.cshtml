@model BDnew_class.Models.Spell

@{
    ViewData["Title"] = "Edit";
}
<body class="backforlist">
<h1>Edit</h1>

<h4>Spell</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input min="1" type="hidden" asp-for="IdSpell" />
            <div class="form-group">
                <label asp-for="NameSpell" class="control-label"></label>
                <input asp-for="NameSpell" maxlength="20" class="form-control" />
                <span asp-validation-for="NameSpell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpellDescription" class="control-label"></label>
                <textarea asp-for="SpellDescription" id="form75" class="md-textarea form-control" rows="3" maxlength="2000"></textarea>
                <span asp-validation-for="SpellDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpellVid" class="control-label"></label>
                <input asp-for="SpellVid" class="form-control" />
                <span asp-validation-for="SpellVid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                <select min="1" asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обртано к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    </body>