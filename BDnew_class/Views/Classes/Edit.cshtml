@model BDnew_class.Models.Class

@{
    ViewData["Title"] = "Edit";
}
<body class="backforlist">
<h1>Редактирование</h1>

<h4>Класса</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" min="1" asp-for="IdClass" />
            <div class="form-group">
                <label asp-for="NameClass"  class="control-label"></label>
                <input asp-for="NameClass" maxlength="20" class="form-control" />
                <span asp-validation-for="NameClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassDescription" class="control-label"></label>
                <textarea asp-for="ClassDescription" id="form75" class="md-textarea form-control" rows="3" maxlength="2000"></textarea>
                <span asp-validation-for="ClassDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassVid" class="control-label"></label>
                <input asp-for="ClassVid" class="form-control" />
                <span asp-validation-for="ClassVid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обртано к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    </body>