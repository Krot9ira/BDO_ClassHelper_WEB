@model BDnew_class.Models.Class

@{
    ViewData["Title"] = "Create";
}
    <body class="backforlist">
        <h1>Добавление</h1>

        <h4>Класса</h4>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdClass" class="control-label"></label>
                        <input asp-for="IdClass" min="1" class="form-control" />
                        <span asp-validation-for="IdClass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NameClass" class="control-label"></label>
                        <input asp-for="NameClass" maxlength="20" class="form-control" />
                        <span asp-validation-for="NameClass" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassDescription" class="control-label"></label>
                        <!-- <input asp-for="ClassDescription" class="form-control" />-->
                        <textarea asp-for="ClassDescription" maxlength="2000" id="form75" class="md-textarea form-control" rows="3"></textarea>
                        <span asp-validation-for="ClassDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassVid" class="control-label"></label>
                        <input asp-for="ClassVid" class="form-control" />
                        <span asp-validation-for="ClassVid" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Вернуться к списку</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
        </body>