@model BDnew_class.Models.Crystal

@{
    ViewData["Title"] = "Edit";
}
<body class="backforlist">
<h1>Редактирование</h1>

<h4>Crystal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCrystal" />
            <div class="form-group">
                <label asp-for="CrystalName" class="control-label"></label>
                <input asp-for="CrystalName" class="form-control" />
                <span asp-validation-for="CrystalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CrystalDescription" class="control-label"></label>
                <input asp-for="CrystalDescription" class="form-control" />
                <span asp-validation-for="CrystalDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>